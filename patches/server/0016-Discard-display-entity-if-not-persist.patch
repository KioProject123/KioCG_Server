diff --git a/src/main/java/com/kiocg/java/Tags.java b/src/main/java/com/kiocg/java/Tags.java
index 1f393a3e0301d46ea0bfaba375a8e6eea7ba3d3b..8fa50eec987aededf89f454546eb23eff916e1c0 100644
